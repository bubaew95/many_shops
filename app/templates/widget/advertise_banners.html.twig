<section class="py-4">
    <div class="container">
        <div class="add-banner">
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-2 row-cols-xl-4">

                {% for item in items %}
                    <div class="col d-flex">
                        <div class="card rounded-0 w-100 border shadow-none">
                            <img src="{{ asset(item.image) }}" class="card-img h-100" alt="...">
                            <div class="card-img-overlay text-center top-auto">
                                <div class="border border-white border-3 py-3 bg-dark-3">
                                    <h5 class="card-title text-white">{{ item.title }}</h5>
                                    <p class="card-text text-uppercase fs-1 lh-1 mt-3 mb-2 text-white">{{ item.getSubTitle() }}</p>
                                    <p class="card-text fs-5 text-white">{{ item.getBtnTitle() }}</p>
                                    <a href="{{ item.link }}" class="btn btn-white btn-ecomm">{{ item.getBtnTitle() }}</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}

        </div>
    </div>
</section>